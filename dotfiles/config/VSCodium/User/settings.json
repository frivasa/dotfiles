{
  "window.restoreWindows": "preserve",
  "explorer.sortOrder": "type",
  "window.commandCenter": false,
  "chat.commandCenter.enabled": false,
  "terminal.explorerKind": "integrated",
  "terminal.external.linuxExec": "konsole",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "explorer.confirmDelete": false,
  "continue.telemetryEnabled": false,
  "terminal.integrated.fontFamily": "'JetBrainsMonoNL Nerd Font'",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontWeightBold": "bold",
  "editor.fontFamily": "'JetBrainsMonoNL Nerd Font'",
  "editor.fontSize": 14,
  "editor.fontLigatures": false,
  "editor.codeLensFontFamily": "'JetBrainsMonoNL Nerd Font'",
  "notebook.output.fontFamily": "'JetBrainsMonoNL Nerd Font'",
  "chat.editor.fontFamily": "'JetBrainsMonoNL Nerd Font'",
  "terminal.integrated.shellIntegration.showCommandGuide": false,
  "accessibility.verbosity.terminal": false,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.shellIntegration.history": 0,
  "workbench.colorTheme": "Brave Contrast (rainglow)",
  "debug.confirmOnExit": "always",
  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "vim.leader": "<space>",
  "vim.useCtrlKeys": false,
  "workbench.iconTheme": "symbols",
  "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "native",
  "breadcrumbs.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.location": "hidden",
  "zenMode.hideLineNumbers": false,
  "editor.defaultFormatter": "charliermarsh.ruff",
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.REPL.sendToNativeREPL": true,
  "jupyter.themeMatplotlibPlots": true,
  "jupyter.interactiveWindow.notebookRepl": true,
  "jupyter.interactiveWindow.creationMode": "perFile",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  }
}
